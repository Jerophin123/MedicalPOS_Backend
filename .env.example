# Database Configuration
DATABASE_URL=jdbc:postgresql://localhost:5432/medical_store_pos
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your_database_password

# Database Connection Pool Settings (Optional)
DATABASE_POOL_SIZE=20
DATABASE_MIN_IDLE=5
DATABASE_CONNECTION_TIMEOUT=30000

# JWT Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-characters
JWT_EXPIRATION=86400000

# Server Configuration
PORT=8080

# JPA/Hibernate Settings (Optional)
DDL_AUTO=update
SHOW_SQL=false

# Environment
SPRING_PROFILES_ACTIVE=production

# CORS Configuration - Use 0.0.0.0 or * to allow all origins, or specify comma-separated URLs
CORS_ALLOWED_ORIGINS=0.0.0.0